div#content
    // float: left;
    position: relative;
    display: inline-block;
    width: calc(100% - 450px);
    margin-left: 150px;
    // background-color: color-black;
    #player
        position: fixed;
        z-index: 1000;
        top: 0;
        left: 150px;
        width: calc(100% - 450px);
        max-height: 300px;
        min-height: 75px;
        height: 300px;
        background-color: black-color;
        font-size: 0;
        .cover
            position: relative;
            max-width: 300px;
            min-width: 75px;
            max-height: 300px;
            height: 100%;
            width: 300px;
            display: inline-block;
            .image
                position: absolute;
                top: 0;
                left: 0;
                max-width: 300px;
                max-height: 300px;
                height: 100%;
                width: 100%;
                background-size: cover;
                background-position: 50% 50%;
        .player
            position: relative;
            display: inline-block;
            width: calc(100% - 300px);
            max-height: 300px;
            height: 100%;
            .player-filter
                position: absolute;
                width: 100%;
                height: 100%;
                background-repeat: repeat;
                background-image: url("../images/dot.png");
                opacity: 0.5;
            .player-cover
                position: absolute;
                width: 100%;
                height: 100%;
                background-size: cover;
                background-position: 50% 50%;

    #content-container
        padding: 30px;
        margin-top: 300px;
        display: inline-block;
        width: 100%;
        font-size: 0;
        #track-container
            display: inline-block;
            width: 100%;
            height: 100%;
            .item
                background-color: white;
                width: 100%;
                height: 120px;
                font-size: 0;
                margin-bottom: 30px;
                .cover
                    background-color: black-color;
                    position: relative;
                    height: 120px;
                    width: 120px;
                    margin-right: 30px;
                    display: inline-block;
                    .image
                        position: absolute;
                        top: 0;
                        left: 0;
                        height: 100%;
                        width: 100%;
                        background-size: cover;
                        background-position: 50% 50%;
                .player
                    background-color: black-color;
                    position: relative;
                    display: inline-block;
                    width: calc(100% - 150px);
                    height: 100%;
                    .player-filter
                        position: absolute;
                        width: 100%;
                        height: 100%;
                        background-repeat: repeat;
                        background-image: url("../images/dot.png");
                        opacity: 0.5;
                    .player-cover
                        position: absolute;
