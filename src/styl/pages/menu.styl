div#menu
    // float: left;
    display: inline-block;
    position: fixed;
    top: 0;
    left: 0;
    width: 150px;
    height: 100vh;
    .joli
        height: 300px;
        width: 150px;
        display: inline-block;
        font-size: 0;
        .logo, .version
            position: relative;
            width: 150px;
            height: 150px;
        .version
            background-color: black-color;
            span
                color: white;
                font-size: font-size-up;
                letter-spacing: letter-spacing-up;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
    nav
        width: 150px;
        height: calc(100% - 300px);
        border-right: 1px solid border-color;
        padding-top: 30px;
        position: relative;
        li
            padding-left: 29px;
            list-style: none;
            margin: 0;
            a
                padding: 6px;
                font-size: font-size-up;
                text-transform: uppercase;
                letter-spacing: letter-spacing-up;
                text-decoration: none;
                color: black-color;
                line-height: 28px;
                vertical-align: text-top;
                transition: color 400ms;
                -webkit-transition: color 250ms;
                transition-timing-function: cubic-bezier(.165,.84,.44,1);
                -webkit-transition-timing-function: cubic-bezier(.165,.84,.44,1);
                &.active, &:hover
                    color: joli-color;
        .active-square
            width: 2px;
            height: 30px;
            background-color: joli-color;
            position: absolute;
            top: 30px;
            right:-1px;
