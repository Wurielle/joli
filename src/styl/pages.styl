body
	background-color: #212121;
	color: white;
section#homepage
	width: 100%;
	height: 100vh;
	h1,h2,h3,h4,h5,h6,p
		line-height: 1;
		margin-bottom: 25px;
		text-align: center;
		text-transform: uppercase;
		letter-spacing: 0.2em;
	a
		margin: 0;
		color: #bbb;
		&:hover
			color: #888;
	&:before
		top: 0
		right: 0
		bottom: 0
		left: 0
		content: "";
		position: absolute;
		opacity: 0.8;
		-webkit-filter: blur(10px);
		filter: blur(10px);
		//background-image: 	url("https://hd.unsplash.com/photo-1463054089930-f4b250ba3c3c");
		background-position: 50% 50%;
		background-size: cover;
	.container
		position: relative;
		top: 50%;
		transform: translateY(-50%);
	.column
		text-align: center;
